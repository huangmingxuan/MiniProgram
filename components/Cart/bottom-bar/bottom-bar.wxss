.bottom-menu{
  width: 100%;
  height: 90rpx;
  background-color: #eee;
  position: fixed;
  left: 0;
  bottom: 0rpx;
  box-shadow: 0 -2px 3px rgba(0, 0, 0, .2);
  font-size: 28rpx;
  color: #888;
  line-height: 88rpx;
  padding-left: 85rpx;
  box-sizing: border-box;
}
.bottom-menu .select-all {
position: absolute;
line-height: 0;
left: 20rpx;
top: 23rpx;
}
.bottom-menu .total-price {
margin-left: 30rpx;
font-size: 32rpx;
color: #666;
}

.bottom-menu .buy-product {
background-color: orangered;
color: #fff;
width: 200rpx;
height: 88rpx;
text-align: center;
line-height: 88rpx;
float: right;
}